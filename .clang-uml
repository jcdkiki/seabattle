# Change to directory where compile_commands.json is
compilation_database_dir: uml-build/
# Change to directory where diagram should be written
output_directory: diagrams
diagrams:
  full-diagram:
    type: class
    glob:
      - src/*.hpp
      - src/devices/*.cpp
      - src/abilities/*.cpp
      - src/control/*.hpp
      - src/messaging/*.hpp
    generate_template_argument_dependencies: false
    using_namespace:
      - seabattle
    package_type: directory
    generate_packages: true
    layout:
      Message:
        - right: Game
        - down: IAbility
        - up: GameControl
    include:
      namespaces:
        - seabattle
    exclude:
      relationships:
        - dependency
      elements:
        - seabattle::vec2
        - seabattle::bbox2
        - seabattle::MessageGenerator
        - seabattle::MessageReciever
        - seabattle::StaticMessageGenerator
        - seabattle::StaticMessageReciever
        - seabattle::MessagePipe
        - seabattle::MessageTransformer
  
  messaging-diagram:
    type: class
    glob:
      - src/*.hpp
      - src/devices/*.cpp
      - src/abilities/*.cpp
      - src/control/*.hpp
      - src/messaging/*.hpp
    generate_template_argument_dependencies: false
    using_namespace:
      - seabattle
    package_type: directory
    generate_packages: true
    include:
      elements:
        - seabattle::MessageGenerator
        - seabattle::MessageReciever
        - seabattle::StaticMessageGenerator
        - seabattle::StaticMessageReciever
        - seabattle::MessagePipe
        - seabattle::MessageTransformer
    exclude:
      relationships:
        - dependency
